{
  "include": [
    "game.trash.json",
    "game.supermassive-trash.json",
  ],
  "classes": {
    "camera": {
      "components": {
        "camera": {
          "pass": "setup-main-camera",
          "globalAlias": "mainCamera"
        },
        "attach to tagged": {
          "tag": "player"
        },
        "tag": {
          "tag": "camera"
        }
      },
      "properties": {
        "zoom": ["0.5"],
      }
    },

    "miniCamera": {
      "components": {
        "camera": {
          "pass": "setup-minimap-camera",
          "globalAlias": "minimapCamera",
        },
        "attach to tagged": {
          "tag": "player"
        },
        "tag": {
          "tag": "miniCamera"
        }
      },
      "properties": {
        "zoom": ["0.025"]
      }
    },

    "background": {
      "components": {
        "background loop": {
          "pass": "game-background",
          "texture": "old/space-gc/kosmosbg.png",
          "camera": "mainCamera"
        },
      },
      "properties": {
        "backgroundPositionScale": ["0.5"],
        "backgroundImageScale": ["2.0"],
      }
    },

    "miniBackground": {
      "components": {
        "background loop": {
          "pass": "minimap-background",
          "texture": "old/space-gc/minimap-grid.png",
          "camera": "minimapCamera"
        }
      },
      "properties": {
        "backgroundPositionScale": ["1"],
        "backgroundImageScale": ["25"],
      }
    },

    "player": {
      "components": {
        "body": { "bodyType": "DynamicBody" },
        "bodyFixture": {
          "type": "box fixture",
          "size": [256, 192],
          "density": 0.01,
        },
        "collectorTriggerFixture": {
          "type": "box fixture",
          "size": [192, 128],
          "center": [0, 128],
          "collisionBeginEvent": "collectorHitStart",
          "collisionEndEvent": "collectorHitEnd",
          "sensor": true,
        },
        "collectorTrigger": {
          "type": "generic trigger",
          "ownerEvent": "collectorHitStart",
          "targetEvent": "playerCollect"
        },
        "attractorTriggerFixture": {
          "type": "polygon fixture",
          "collisionBeginEvent": "attractorHitBegin",
          "collisionEndEvent": "attractorHitEnd",
          "vertices": [
            -64, 0,
            -256, 512,
            256, 512,
            64, 0
          ],
          "density": 0,
          "sensor": true,
        },
        "com.github.alexeybond.gdx_gm2.test_game.game.components.decl.ControlledAttractorDecl": {},
        "tag:player": { "type": "tag", "tag": "player" },
        "com.github.alexeybond.gdx_gm2.test_game.game.components.decl.FuelTankDecl": {},
        "com.github.alexeybond.gdx_gm2.test_game.game.components.decl.SpaceshipEnginesDecl": {},
        "sprite": { "sprite": "old/space-gc/256x256spaceship_1", "accurate": true },
        "minimapSprite": {
          "type": "sprite",
          "sprite": "old/space-gc/minimap-player",
          "pass": "minimap-objects",
          "scale": 10
        },
        "leftEngineParticles": {
          "type": "particles",
          "effect": "particles/spaceship-engine.p",
          "offset": [-100, -70],
          "rotate": -90,
          "masterProperty": "leftEngineEnabled"
        },
        "rightEngineParticles": {
          "type": "particles",
          "effect": "particles/spaceship-engine.p",
          "offset": [95, -70],
          "rotate": -90,
          "masterProperty": "rightEngineEnabled"
        },
        "attractorParticles": {
          "type": "particles",
          "effect": "particles/spaceship-attractor.p",
          "offset": [0, 440],
          "rotate": -90,
          "masterProperty": "attractorEnabled"
        },
        "collectSound": {
          "type": "one shot sound",
          "event": "fuelPicked",
          "sound": "old/space-gc/sound/collect.wav"
        },
        "rightEngineSound": {
          "type": "continuous sound",
          "event": "rightEngineEnabled",
          "sound": "old/space-gc/sound/tourbin-right.wav"
        },
        "leftEngineSound": {
          "type": "continuous sound",
          "event": "leftEngineEnabled",
          "sound": "old/space-gc/sound/tourbin-left.wav"
        },
        "key bindings": {"bind": {
          "rightEngineControl": "D",
          "leftEngineControl": "A",
          "attractorControl": "W"
        }}
      },
      "properties": {
        "fuelCapacity": ["100"],
        "fuel": ["100"],
      }
    }
  },
  "entities": [
    { /* Player */
      "inherit": ["player"]
    },
    { /* "Environment" entity - camera and background */
      "inherit": ["camera", "background"]
    },
    {
      "inherit": ["miniCamera", "miniBackground"]
    },
    {
      "inherit": ["trash-12"],
      "properties": {
        "position": ["-600", "200"]
      }
    },
    {
      "inherit": ["supermassive-trash-5"],
      "properties": {
        "position": ["-1200", "300"]
      }
    },
    {
      "components": {
        "infinite world generator": {
          "observerTag": "player",
          "generateTag": "trash",
          "generateClasses": [
            "trash-1", "trash-2", "trash-3",
            "trash-6", "trash-7", "trash-8",
            "trash-9", "trash-10", "trash-11",
            "trash-12",
          ]
        }
      },
      "properties": {
        "leaveZone": ["1"],
        "keepZone": ["4"],
        "generateZone": ["5"],
        "gridSize": ["1000"]
      }
    },
    {
      "components": {
        "infinite world generator": {
          "observerTag": "player",
          "generateTag": "planet",
          "generateClasses": [
            "supermassive-trash-1",
            "supermassive-trash-2",
            "supermassive-trash-3",
            "supermassive-trash-4",
            "supermassive-trash-5",
            "supermassive-trash-6",
          ]
        }
      },
      "properties": {
        "leaveZone": ["1"],
        "keepZone": ["3"],
        "generateZone": ["5"],
        "gridSize": ["3000"]
      }
    }
  ]
}
