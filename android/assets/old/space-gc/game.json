    "camera": {
      "components": {
        "camera": {
          "pass": "setup-main-camera",
          "globalAlias": "mainCamera"
        },
        "attach to tagged": {
          "tag": "player"
        },
        "tag": {
          "tag": "camera"
        }
      },
      "properties": {
        "zoom": ["0.5"],
      }
    },

    "background": {
