    "player": {
      "components": {
        "body": { "bodyType": "DynamicBody" },
        "bodyFixture": {
          "type": "box fixture",
          "size": [256, 192],
          "density": 0.01,
        },
        "collectorTriggerFixture": {
          "type": "box fixture",
          "size": [192, 128],
          "center": [0, 128],
          "collisionBeginEvent": "collectorHitStart",
          "collisionEndEvent": "collectorHitEnd",
          "sensor": true,
        },
        "collectorTrigger": {
          "type": "generic trigger",
          "ownerEvent": "collectorHitStart",
          "targetEvent": "playerCollect"
        },
        "attractorTriggerFixture": {
          "type": "polygon fixture",
          "collisionBeginEvent": "attractorHitBegin",
          "collisionEndEvent": "attractorHitEnd",
          "vertices": [
            -64, 0,
            -256, 512,
            256, 512,
            64, 0
          ],
          "density": 0,
          "sensor": true,
        },
        "com.github.alexeybond.gdx_gm2.test_game.game.components.decl.ControlledAttractorDecl": {},
        "tag:player": { "type": "tag", "tag": "player" },
        "com.github.alexeybond.gdx_gm2.test_game.game.components.decl.FuelTankDecl": {},
        "com.github.alexeybond.gdx_gm2.test_game.game.components.decl.SpaceshipEnginesDecl": {},
        "sprite": { "sprite": "old/space-gc/256x256spaceship_1" },
        "leftEngineParticles": {
          "type": "particles",
          "effect": "particles/spaceship-engine.p",
          "offset": [-100, -70],
          "rotate": -90,
          "masterProperty": "leftEngineEnabled"
        },
        "rightEngineParticles": {
          "type": "particles",
          "effect": "particles/spaceship-engine.p",
          "offset": [95, -70],
          "rotate": -90,
          "masterProperty": "rightEngineEnabled"
        },
        "attractorParticles": {
          "type": "particles",
          "effect": "particles/spaceship-attractor.p",
          "offset": [0, 440],
          "rotate": -90,
          "masterProperty": "attractorEnabled"
        },
        "collectSound": {
          "type": "one shot sound",
          "event": "fuelPicked",
          "sound": "old/space-gc/sound/collect.wav"
        },
        "rightEngineSound": {
          "type": "continuous sound",
          "event": "rightEngineEnabled",
          "sound": "old/space-gc/sound/tourbin-right.wav"
        },
        "leftEngineSound": {
          "type": "continuous sound",
          "event": "leftEngineEnabled",
          "sound": "old/space-gc/sound/tourbin-left.wav"
        },
        "key bindings": {"bind": {
          "rightEngineControl": "D",
          "leftEngineControl": "A",
          "attractorControl": "W"
        }}
      },
      "properties": {
        "fuelCapacity": ["100"],
        "fuel": ["100"],
      }
    }
